{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["error", "never"],
        "quotes": ["error", "single"],
        "curly": "error",
        "linebreak-style": ["error", "unix"],
        "indent": ["error", 2],
        "array-bracket-spacing": "error",
        "block-spacing":"error",
        "brace-style": "error",
        "camelcase":"error",
        "comma-dangle":"error",
        "comma-spacing":"error",
        "comma-style":"error",
        "computed-property-spacing":"error",
        "func-call-spacing":"error",
        "eol-last":"error",
        "keyword-spacing":"error",
        "max-depth":"error",
        "max-len":"error",
        "max-params": ["error", 2],
        "max-statements-per-line":"error",
        "no-lonely-if":"error",
        "dot-location": "error",
        "dot-notation": "error",
        "eqeqeq": "error",
        "no-else-return": "error",
        "no-multi-spaces": "error",
        "no-useless-return": "error",
        "yoda": "error",
        // note you must disable the base rule as it can report incorrect errors
        "no-empty-function": "off",
        "@typescript-eslint/no-empty-function": ["off"]
    },
    "overrides": [
        {
          "files": ["*.test.js"],
          "rules": {
            "no-unused-expressions": "off",
            "no-undef": "off"
          }
        }
      ]
}
